{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/*"]
    },
    "jsx": "preserve"
  },
  "include": ["apps/**/*", "packages/**/*"],
  "exclude": ["node_modules", "dist", ".next", "apps/functions"]
} 